                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bot103"
                    android:src="@mipmap/c50"
                    android:layout_margin="3dp"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bot104"
                    android:src="@mipmap/c50"
                    android:layout_margin="3dp"
                    android:visibility="invisible" />

                <ImageView
